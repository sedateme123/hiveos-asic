if [ -e /hive ]; then
	nohup /hive/sbin/bash -c 'sleep 30; /hive/bin/hive > /tmp/client-boot.log 2>&1; echo "Running the Client..."' > /dev/null 2>&1 &
	nohup /hive/sbin/bash -c 'sleep 40; /hive/bin/hello' > /dev/null 2>&1 &
# legacy cron imitation
# now it's a /hive/bin/controller built-in
